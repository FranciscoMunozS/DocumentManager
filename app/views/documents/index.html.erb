<p id="notice"><%= notice %></p>

<h1>Documents</h1>
<hr>
<table class="table table-striped table-bordered" id="dttb">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.name %></td>
        <td></td>
        <td>
          <%= link_to 'Show', document, class: 'btn btn-default' %>
          <%= link_to 'Edit', edit_document_path(document), class: 'btn btn-default' %>
          <%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Document', new_document_path %>
